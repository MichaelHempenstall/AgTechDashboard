    <div id="donutchart2" style="width: 300px; height: 200px;"></div>
    <div id="donutchart3" style="width: 300px; height: 200px;"></div>
    <div id="donutchart4" style="width: 300px; height: 200px;"></div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load("current", { packages: ["corechart"] });
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                ['Work', 11],
                ['Eat', 2],
                ['Commute', 2],
            ]);

            var options = {
                title: 'Machine',
                pieHole: 0.3,
            };

            var chart1 = new google.visualization.PieChart(document.getElementById('donutchart1'));
            chart1.draw(data, options);
            var chart2 = new google.visualization.PieChart(document.getElementById('donutchart2'));
            chart2.draw(data, options);
            var chart3 = new google.visualization.PieChart(document.getElementById('donutchart3'));
            chart3.draw(data, options);
            var chart3 = new google.visualization.PieChart(document.getElementById('donutchart4'));
            chart3.draw(data, options);
        }
</script>
